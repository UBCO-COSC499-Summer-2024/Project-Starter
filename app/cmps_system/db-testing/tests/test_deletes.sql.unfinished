-- tests/test_deletes.sql
BEGIN;

SELECT plan(2);

-- Delete from instructor and verify
DELETE FROM instructor WHERE ubc_employee_num = 123456789;
SELECT is(
    (SELECT COUNT(*) FROM instructor WHERE ubc_employee_num = 123456789),
    0,
    'Instructor should be deleted'
);

-- Delete from course and verify
DELETE FROM course WHERE course_num = 110;
SELECT is(
    (SELECT COUNT(*) FROM course WHERE course_num = 110),
    0,
    'Course should be deleted'
);

SELECT finish();

ROLLBACK;
