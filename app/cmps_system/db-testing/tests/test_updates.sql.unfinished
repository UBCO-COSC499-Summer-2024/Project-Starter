UPDATE course SET course_title = 'Advanced Computer Science' WHERE course_num = 110;
SELECT is(
    (SELECT course_title FROM course WHERE course_num = 110),
    'Advanced Computer Science',
    'Course title should be updated to Advanced Computer Science'
);

